# Base stage - setup pnpm and turbo
FROM node:22-alpine AS base
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
ENV CI=true
RUN corepack enable && corepack prepare pnpm@10.28.0 --activate
RUN pnpm add -g turbo
WORKDIR /app

# Pruner stage - extract only what's needed for @hjaerna/web
FROM base AS pruner
COPY . .
RUN pnpm turbo prune @hjaerna/web --docker

# Installer stage - install dependencies from pruned workspace
FROM base AS installer
# Copy pruned lockfile and package.json files
COPY --from=pruner /app/out/json/ .
COPY --from=pruner /app/out/pnpm-lock.yaml ./pnpm-lock.yaml
RUN pnpm install --no-frozen-lockfile

# Builder stage - build the Next.js application
FROM base AS builder
COPY --from=installer /app/ .
COPY --from=pruner /app/out/full/ .
RUN pnpm turbo run build --filter=@hjaerna/web

# Production stage - runs the Next.js standalone server
FROM node:22-alpine AS production
ENV NODE_ENV=production
WORKDIR /app

# Copy standalone output
COPY --from=builder /app/apps/web/.next/standalone ./
COPY --from=builder /app/apps/web/.next/static ./apps/web/.next/static
COPY --from=builder /app/apps/web/public ./apps/web/public

EXPOSE 3000
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

CMD ["node", "apps/web/server.js"]

# Development stage - runs with next dev
FROM base AS development
ENV NODE_ENV=development
WORKDIR /app
COPY --from=installer /app/ .
COPY --from=pruner /app/out/full/ .
WORKDIR /app/apps/web

EXPOSE 3000
CMD ["pnpm", "dev"]
